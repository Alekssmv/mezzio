FROM ubuntu

ARG AUTH_TOKEN

ENV TZ=Europe/Moscow
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

RUN apt-get update && apt-get install -y php php-mysql php-curl composer php-dom curl

RUN curl -o /tmp/ngrok.tgz -L https://bin.equinox.io/c/bNyj1mQVY4c/ngrok-v3-stable-linux-amd64.tgz

RUN tar xzvf /tmp/ngrok.tgz -C /

RUN rm /tmp/ngrok.tgz



